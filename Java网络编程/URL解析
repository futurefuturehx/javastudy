import java.net.URL;
public class 解析URL {
	public static void main(String[]args) throws Exception{
		//这边是URL连接 与括号中的网址进行连接 并且生成对象
		URL url=new URL("https://www.baidu.com?a=123&b=456&c=789");
		//在java中每个类都有toString()这个方法 因为所有类都继承于object类 而object类包含toString这个方法
		//在System.out.println(xx)时 这个xx不是String的话 就会自动调用toString()方法
		System.out.println("URL是"+url.toString());
		//.getProtocol（）获取协议
		System.out.println("协议是"+url.getProtocol());
		//.getFile()获取文件名
		System.out.println("文件名是:"+url.getFile());
		//.getHost（）获取主机
		System.out.println("主机是:"+url.getHost());
		//.getPath() 获取路径
		System.out.println("路径是:"+url.getPath());
		//.getPort()获取端口号
		System.out.println("端口号是:"+url.getPort());
		//.getDefaultPort()获取默认端口号
		System.out.println("默认端口号是："+url.getDefaultPort());
	}

}
